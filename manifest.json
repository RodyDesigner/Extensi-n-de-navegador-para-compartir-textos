{
  "manifest_version": 3,
  "name": "TextShare",
  "version": "1.0",
  "description": "Comparte textos entre dispositivos de forma segura",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "send-text": {
      "suggested_key": {
        "default": "Ctrl+Alt+V",
        "mac": "Command+Alt+V"
      },
      "description": "Enviar texto copiado"
    }
  }
}